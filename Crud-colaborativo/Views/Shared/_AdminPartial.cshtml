@inject SignInManager<Funcionario> _signInManager
@inject UserManager<Funcionario> _userManager

@if(_signInManager.IsSignedIn(User))
{
    var currentUser = await _userManager.GetUserAsync(User);

    var isAdmin = currentUser != null && await _userManager.IsInRoleAsync(currentUser, "Admin");

    if(isAdmin)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Role" asp-action="Index">Roles</a>
        </li>
    }
}
