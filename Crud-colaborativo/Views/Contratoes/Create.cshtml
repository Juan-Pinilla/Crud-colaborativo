@model Crud_colaborativo.Models.Contrato

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Contrato</h4>
<hr />
<div class="row">

    <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Id" class="control-label">Tipo de contrato</label>
                    <select asp-for="Id" class="form-control">
                        <option value="RF">Revisoria Fiscal</option>
                        <option value="IMP">Impuestos</option>
                        <option value="CON">Contabilidad</option>
                        <option value="CONS">Consultoría</option>
                        <!-- Agrega más tipos de contrato según sea necesario -->
                    </select>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoCliente" class="control-label">Tipo de cliente</label>
                    <select asp-for="TipoCliente" class="form-control">
                        <option value="Grande">Grande</option>
                        <option value="Mediano">Mediano</option>
                        <option value="Pequeño">Pequeño</option>
                        
                        <!-- Agrega más tipos de contrato según sea necesario -->
                    </select>
                <span asp-validation-for="TipoCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empresa" class="control-label"></label>
                <input asp-for="Empresa" class="form-control" />
                <span asp-validation-for="Empresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Referencia" class="control-label"></label>
                <input asp-for="Referencia" class="form-control" />
                <span asp-validation-for="Referencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoContrato" class="control-label">Estado del contrato</label>
                    <select asp-for="EstadoContrato" class="form-control">
                        <option value="Pendiente">Pendiente</option>
                        <option value="Aprovado">Aprovado</option>
                        <option value="Rechazado">Rechazado</option>

                        <!-- Agrega más tipos de contrato según sea necesario -->
                    </select>
                <span asp-validation-for="EstadoContrato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label">Fecha de inicio</label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFinalizacion" class="control-label">Fecha de finalizacion</label>
                <input asp-for="FechaFinalizacion" class="form-control" />
                <span asp-validation-for="FechaFinalizacion" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Socio" class="control-label"></label>
                <select asp-for="Socio" class="form-control">
                    <option value="">Selecciona un nombre</option>
                    <option value="Juan Perez">Juan Perez</option>
                    <option value="Ana García">Ana García</option>
                    <option value="Carlos López">Carlos López</option>
                    <option value="Laura Martínez">Laura Martínez</option>
                </select>
                <span asp-validation-for="Socio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gerente" class="control-label"></label>
                <select asp-for="Gerente" class="form-control">
                    <option value="">Selecciona un nombre</option>
                    <option value="Pedro Rodríguez">Pedro Rodríguez</option>
                    <option value="María González">María González</option>
                    <option value="Luisa Sánchez">Luisa Sánchez</option>
                    <option value="Javier Fernández">Javier Fernández</option>
                </select>
                <span asp-validation-for="Gerente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senior" class="control-label"></label>
                <select asp-for="Senior" class="form-control">
                    <option value="">Selecciona un nombre</option>
                    <option value="Elena Ramírez">Elena Ramírez</option>
                    <option value="Miguel Díaz">Miguel Díaz</option>
                    <option value="Isabel Castro">Isabel Castro</option>
                    <option value="Ricardo Herrera">Ricardo Herrera</option>
                </select>
                <span asp-validation-for="Senior" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocioParticipacion" class="control-label">Socio de participacion</label>
                <select asp-for="SocioParticipacion" class="form-control">
                    <option value="">Selecciona un nombre</option>
                    <option value="Fernanda Núñez">Fernanda Núñez</option>
                    <option value="Hugo Torres">Hugo Torres</option>
                    <option value="Carmen Medina">Carmen Medina</option>
                    <option value="Diego Vargas">Diego Vargas</option>
                </select>
                <span asp-validation-for="SocioParticipacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocioComercial" class="control-label">Socio comercial</label>
                <select asp-for="SocioComercial" class="form-control">
                    <option value="">Selecciona un nombre</option>
                    <option value="Gabriela Navarro">Gabriela Navarro</option>
                    <option value="Raul Jiménez">Raul Jiménez</option>
                    <option value="Sofía Mendoza">Sofía Mendoza</option>
                    <option value="Arturo Salgado">Arturo Salgado</option>
                </select>
                <span asp-validation-for="SocioComercial" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PropuestaContrato" class="control-label">Propuesta de contrato</label>
                <input asp-for="PropuestaContrato" type="file" class="form-control" />
                <span asp-validation-for="PropuestaContrato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
        </div>
           
            
        </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
